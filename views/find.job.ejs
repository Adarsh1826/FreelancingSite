<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find a Job</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }
        .search-bar {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .search-bar input {
            padding: 10px;
            width: 300px;
            border: 1px solid #ddd;
            border-radius: 5px 0 0 5px;
            font-size: 16px;
            color: #333;
        }
        .search-bar button {
            padding: 10px 15px;
            border: none;
            background-color: #28a745;
            color: #fff;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
            font-size: 16px;
        }
        .search-bar button:hover {
            background-color: #218838;
        }
        .job-listings {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }
        .job-card {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .job-card:hover {
            transform: translateY(-5px);
        }
        .job-card h3 {
            margin-top: 0;
            color: #333;
        }
        .job-card p {
            margin: 10px 0;
            color: #555;
        }
        .job-card .budget {
            font-weight: bold;
            color: #28a745;
        }
        .apply-btn {
            display: inline-block;
            padding: 10px 15px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            font-weight: bold;
            text-align: center;
        }
        .apply-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Find a Job</h2>
        <div class="search-bar">
            <input type="text" id="searchTitle" placeholder="Search by job title">
            <input type="text" id="searchDomain" placeholder="Search by domain">
            <button id="searchBtn">Search</button>
        </div>
        <div class="job-listings" id="jobListings"></div>
    </div>

    <script>
        const jobListingsContainer = document.getElementById('jobListings');
        const searchBtn = document.getElementById('searchBtn');

        async function fetchJobs(jobTitle = '', domain = '') {
            try {
                const response = await fetch(`/api/v1/job?title=${jobTitle}&domain=${domain}`);
                const { data } = await response.json();

                renderJobs(data);
            } catch (error) {
                console.error('Error fetching jobs:', error);
            }
        }

        function renderJobs(jobs) {
            jobListingsContainer.innerHTML = '';

            if (jobs.length === 0) {
                jobListingsContainer.innerHTML = '<p>No jobs found.</p>';
                return;
            }

            jobs.forEach(job => {
                const jobCard = document.createElement('div');
                jobCard.classList.add('job-card');
                jobCard.innerHTML = `
                    <h3>${job.jobTitle}</h3>
                    <p><strong>Domain:</strong> ${job.domain}</p>
                    <p><strong>Experience:</strong> ${job.experience} years</p>
                    <p class="budget">Budget: $${job.budget}</p>
                    <p>${job.description}</p>
                    <a href="/apply/${job._id}" class="apply-btn">Apply Now</a>
                `;
                jobListingsContainer.appendChild(jobCard);
            });
        }

        searchBtn.addEventListener('click', () => {
            const jobTitle = document.getElementById('searchTitle').value;
            const domain = document.getElementById('searchDomain').value;
            fetchJobs(jobTitle, domain);
        });

        // Initial fetch of all jobs
        fetchJobs();
    </script>
</body>
</html>

